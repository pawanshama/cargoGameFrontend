{
  "compilerOptions": {
    /* ---------- Cible & environnement ---------- */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* ---------- Modules / résolution ---------- */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* ---------- Typage strict ---------- */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    /* ---------- JSX ---------- */
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* ---------- Paths / baseUrl ---------- */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    /* ---------- Types globaux supplémentaires ---------- */
    "types": ["@twa-dev/types"],   // ← nécessaire pour initDataUnsafe

    /* ---------- Build ---------- */
    "noEmit": true,
    "moduleDetection": "force"


  },

  /* ---------- Fichiers pris en compte ---------- */
  
  "include": ["src", "src/types"]  //  <-  assurez-vous que le dossier custom est scanné



  
}
